scope Main {
    fn main() {
        CharUtil::println("Marlin Calculator!!", 19);

        let char op = ' ';

        loop {
            CharUtil::print("Type one of '+', '-', '*', '/': ", 32);

            op = std::getchar();
            std::getchar();

            if op == '+' or op == '-' or op == '*' or op == '/' {
                break;
            } else {
                CharUtil::println("Invalid input.", 14);
            }
        }

        CharUtil::print("Enter first number: ", 20);
        let int a = CharUtil::read_int();

        CharUtil::print("Enter second number: ", 21);

        let int b = CharUtil::read_int();
        let int ans = 0;

        if op == '+' {
            ans = a + b;
        } else if op == '-' {
            ans = a - b;
        } else if op == '*' {
            ans = a * b;
        } else if op == '/' {
            ans = a / b;
        }

        CharUtil::print_int(a);
        std::putchar(' ');
        std::putchar(op);
        std::putchar(' ');
        CharUtil::print_int(b);
        std::putchar(' ');
        std::putchar('=');
        std::putchar(' ');
        CharUtil::print_int(ans);
    }
}