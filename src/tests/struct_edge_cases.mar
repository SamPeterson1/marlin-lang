struct EmptyStruct {
}

struct MinimalStruct {
    int x;
}

struct NoConstructorStruct {
    int a;
    double b;
    bool c;
}

struct MultipleConstructors {
    int value;
    double ratio;
    bool flag;
    
    $default() {
        value = 0;
        ratio = 0.0;
        flag = false;
    }
    
    $with_value(int v) {
        value = v;
        ratio = 1.0;
        flag = true;
    }
    
    $full_init(int v, double r, bool f) {
        value = v;
        ratio = r;
        flag = f;
    }
}

struct ComplexTypes {
    int[] numbers;
    &double reference;
    Point[] points;
    &int[][] matrix_ref;
    
    $init(int size) {
        numbers = new int[size];
        points = new Point[size];
    }
}

struct NestedStructs {
    Point center;
    Calculator calc;
    MultipleConstructors config;
    
    $create_all() {
        center = $Point(0, 0);
        calc = $Calculator(100);
        config = $MultipleConstructors();
    }
}